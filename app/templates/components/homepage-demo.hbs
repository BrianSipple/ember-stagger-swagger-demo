<div class="u-full-stretch u-full-bleed u-relative u-overflow-hide u-overflow-scroll-y">

  <header class="u-relative u-fill-width u-height-20">
    <h1 class="u-absolute u-transform-center u-fill-width g-gray--300 u-align-center">
      Ember Stagger Swagger
    </h1>
  </header>

  <main class="u-relative u-fill-width u-fill-height u-mt3">

    <section class="u-width-90 u-fill-height u-relative u-flow-middle">

      <div class="homepage-demo__demo-grid-area
                  o-flex-grid
                  o-flex-grid--full
                  u-mt4">

        {{!-- showItemsToggle main row --}}
        <div class="o-grid-cell o-flex-grid u-fill-height">

          {{!-- showItemsToggle column --}}
          <div class="homepage-demo__swagger-zone-toggle-menu
                      o-grid-cell
                      o-grid-cell--grow-none
                      o-flex-grid
                      o-flex-grid--full
                      o-flex-grid--center
                      o-flex-grid--spaceAround
                      u-width-20
                      u-fill-height
                      u-mr2
                      u-relative">

            {{!-- show/hide toggle --}}
            <div class="o-grid-cell">

              <div class="o-flex-grid">
                {{#radio-button
                  class="o-grid-cell"
                  groupValue=showItems
                  value=true
                  name="showItemsRadio"
                }}
                  Show (Current Value: {{showItems}})
                  {{!-- <label class="o-grid-cell" for="showItemsRadio">
                    {{input class="o-grid-cell" id="showItemsRadio" type="radio" name="showItemsToggleGroup" value=showItems onChange=(action 'onShowItemsToggled')}}
                    Show (Current Value: {{showItems}})
                  </label> --}}
                {{/radio-button}}
              </div>

              <div class="o-flex-grid">
                {{#radio-button
                  class="o-grid-cell"
                  groupValue=showItems
                  value=false
                  name="showItemsRadio"
                }}
                {{!-- <label class="o-grid-cell" for="hideItemsRadio">
                  {{input class="o-grid-cell" id="hideItemsRadio" type="radio" name="showItemsToggleGroup" value=showItems}}
                  Hide (Current Value: {{showItems}})
                </label> --}}
                  Hide (Current Value: {{showItems}})
                {{/radio-button}}
              </div>

            </div>

            {{!-- example in/out keyframes to choose --}}
            <div class="o-grid-cell">
              <h4>Custom Keyframes Examples</h4>

              <div class="o-flex-grid">
                <label class="o-grid-cell" for="keyframes--slide">
                  {{input class="o-grid-cell" id="keyframes--slide" type="radio" name="keyframesToggleGroup" value=(mut selectedKeyframe)}}
                  Slide
                </label>
              </div>

              <div class="o-flex-grid">
                <label class="o-grid-cell" for="keyframes--slide-and-fade">SlideAndFade</label>
                {{input class="o-grid-cell" id="keyframes--slide-and-fade" type="radio" name="keyframesToggleGroup" value=(mut selectedKeyframe)}}
              </div>

              <div class="o-flex-grid">
                <label class="o-grid-cell" for="keyframes--fad">Fade</label>
                {{input class="o-grid-cell" id="keyframes--fad" type="radio" name="keyframesToggleGroup" value=(mut selectedKeyframe)}}
              </div>

              <div class="o-flex-grid">
                <label class="o-grid-cell" for="keyframes--scale">Scale</label>
                {{input class="o-grid-cell" id="keyframes--scale" type="radio" name="keyframesToggleGroup" value=(mut selectedKeyframe)}}
              </div>

            </div>

          </div>

          {{!-- Stagger list column --}}
          {{#stagger-list
            class="o-grid-cell
                   o-grid-cell--flex-one
                   u-fill-width
                   u-overflow-hide
                   u-overflow-scroll-y
                   u-relative
                   g-list-reset
                   g-bg-red--100"
            tagName="ul"
            inDirection=currentInDirection
            outDirection=currentOutDirection
            showItems=showItems
          }}

            {{#each staggerListItems as |item index|}}
              {{space-craft-card
                tagName="li"
                class="g-box-shadow-2
                       g-nearWhite
                       u-overflow-hide
                       u-width-80
                       u-m-auto
                       u-mt2
                       u-mb2"
                item=item index=index
              }}
            {{/each}}

          {{/stagger-list}}


        </div>

        <div class="o-grid-cell o-flex-grid">

          {{!-- Direction selection TODO: Make these stagger lists ðŸ˜€? --}}
          <div class="o-grid-cell
                      u-mb2
                      u-relative">

            <div class="o-flex-grid u-fill-width u-height-spacing-4 u-mt2">

              <div class="o-grid-cell u-relative u-width-20 u-fill-height o-grid-cell--auto">
                <h4 class="u-absolute u-align-center u-transform-center">In Direction</h4>
              </div>


              {{radio-bar
                class="o-grid-cell
                       o-grid-cell--grow-one
                       o-flex-grid--spaceBetween
                       u-fill-height
                       u-pl2
                       u-pr2
                       g-bg-yellow--300"
                groupValue=(mut currentInDirection)
                groupName="inDirection-toggle"
                options=staggerDirectionOptions
              }}
            </div>

            <div class="o-flex-grid u-fill-width u-height-spacing-4 u-mt2">

              <div class="o-grid-cell u-relative u-width-20 u-fill-height o-grid-cell--auto">
                <h4 class="u-absolute u-align-center u-transform-center">Out Direction</h4>
              </div>

              {{radio-bar
                class="o-grid-cell
                       o-grid-cell--grow-one
                       o-flex-grid--spaceBetween
                       u-fill-height
                       u-pl2
                       u-pr2
                       g-bg-yellow--300"
                groupValue=(mut currentOutDirection)
                groupName="outDirection-toggle"
                options=staggerDirectionOptions
              }}
            </div>

          </div>

        </div>

      </div>

    </section>


  </main>

</div>
