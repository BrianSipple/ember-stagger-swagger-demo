<div class="u-full-stretch u-full-bleed u-relative u-overflow-hide u-overflow-scroll-y">

  <header class="u-relative u-fill-width u-height-20">
    <h1 class="u-absolute u-transform-center u-fill-width g-gray--300 u-align-center">
      Ember Stagger Swagger
    </h1>
  </header>

  <main class="u-relative u-fill-width u-fill-height u-mt3">

    <section class="u-width-90 u-fill-height u-relative u-flow-middle">

      <div class="homepage-demo__demo-grid-area
                  o-flex-grid
                  o-flex-grid--full
                  u-mt4">

        {{!-- showItemsToggle main row --}}
        <div class="o-grid-cell o-flex-grid u-fill-height u-mb3">

          {{!-- showItemsToggle column --}}
          <div class="homepage-demo__swagger-zone-toggle-menu
                      o-grid-cell
                      o-grid-cell--grow-none
                      o-flex-grid
                      o-flex-grid--full
                      o-flex-grid--center
                      o-flex-grid--spaceAround
                      u-width-20
                      u-fill-height
                      u-mr2
                      u-relative">

            {{!-- show/hide toggle --}}
            <section class="o-grid-cell o-flex-grid u-height-spacing-4">

              <button class="c-button
                             c-button--hover-raise
                             o-grid-cell
                             o-flex-grid
                             o-flex-grid--justifyCenter
                             o-flex-grid--center
                             g-bg-red--300
                             g-gray--900
                             u-fill-height"
                       onclick={{action 'onShowItemsToggled'}}>

                  <span class="o-grid-cell">
                    {{#if showItems}}
                      Hide
                    {{else}}
                      Show
                    {{/if}}
                  </span>

              </button>


            </section>

            {{!-- Timing Sliders --}}
            <section class="o-grid-cell o-flex-grid">

              <div class="c-slider-widget o-grid-cell o-flex-grid o-flex-grid--full o-flex-grid--justifyCenter u-mt2">
                <label class="c-slider-widget__label g-clip g-font-smaller o-grid-cell" for="stagger-interval-slider">Stagger Interval (ms)</label>
                {{x-slider
                  class="c-slider-widget__slider
                         o-grid-cell
                         g-bg-red--100
                         g-height-spacing-3
                         u-mt1"
                  id="stagger-interval-slider"
                  min="32"
                  max="4000"
                  step="1"
                  value=(mut staggerInterval)
                }}
                <output class="c-slider-widget__output o-grid-cell u-align-center u-mt1" for="stagger-interval-slider">{{staggerInterval}}</output>
              </div>

              {{!-- Duration slider  --}}
              <div class="c-slider-widget o-grid-cell o-flex-grid o-flex-grid--full o-flex-grid--justifyCenter u-mt2">
                <label class="c-slider-widget__label g-clip g-font-smaller o-grid-cell" for="animation-duration-slider">Animation Duration (ms)</label>
                {{x-slider
                  class="c-slider-widget__slider o-grid-cell u-mt1"
                  id="animation-duration-slider"
                  min="200"
                  max="6000"
                  step="10"
                  value=(mut animationDuration)
                }}
                <output class="c-slider-widget__output o-grid-cell u-align-center u-mt1" for="animation-duration-slider">{{animationDuration}}</output>
              </div>

            </section>

            {{!-- Available Keyframes Selection --}}
            <section class="o-grid-cell o-flex-grid o-flex-grid--full o-flex-grid--center u-mb2 u-mt2">

              <h5 class="o-grid-cell u-align-center g-border-bottom-s1 u-mb2">Out-of-the-box Keyframes</h5>

              <div class="o-grid-cell c-select-widget u-mb2">

                <label class="g-font-smaller u-align-center u-block" for="select-inAnimation"><code class="g-bg-red--100">inEffect</code></label>
                {{#x-select class="u-block u-m-auto" id="select-inAnimation" value=currentSupportedInEffect}}

                  {{#each supportedEffects as |animationName|}}
                    {{#x-option value=animationName}}{{animationName}}{{/x-option}}
                  {{/each}}

                {{/x-select}}

              </div>

              <div class="o-grid-cell c-select-widget">

                <label class="g-font-smaller u-align-center u-block" for="select-outAnimation"><code class="g-bg-red--100">outEffect</code></label>
                {{#x-select class="u-block u-m-auto" id="select-outAnimation" value=currentSupportedOutEffect}}

                  {{#each supportedEffects as |animationName|}}
                    {{#x-option value=animationName}}{{animationName}}{{/x-option}}
                  {{/each}}

                {{/x-select}}

              </div>
            </section>

          </div>

          {{!-- Stagger list column --}}
          {{#stagger-list
            class="o-grid-cell
                   o-grid-cell--flex-one
                   u-fill-width
                   u-overflow-hide
                   u-overflow-scroll-y
                   u-relative
                   g-list-reset
                   g-bg-red--100"
            inDirection=currentInDirection
            outDirection=currentOutDirection
            inEffect=currentSupportedInEffect
            outEffect=currentSupportedOutEffect
            staggerInterval=staggerInterval
            duration=animationDuration
            showItems=showItems
          }}

            {{#each staggerListItems as |item index|}}
              {{space-craft-card
                class="g-box-shadow-2
                       g-nearWhite
                       u-overflow-hide
                       u-width-80
                       u-m-auto
                       u-mt2
                       u-mb2"
                item=item index=index
              }}
            {{/each}}

          {{/stagger-list}}


        </div>

        <div class="o-grid-cell o-flex-grid">

          {{!-- Direction selection TODO: Make these stagger lists ðŸ˜€? --}}
          <div class="o-grid-cell
                      u-mb2
                      u-relative">

            <div class="o-flex-grid u-fill-width u-height-spacing-4 u-mt2">

              <div class="o-grid-cell u-relative u-width-20 u-fill-height o-grid-cell--auto">
                <h4 class="u-absolute u-align-center u-transform-center">In Direction</h4>
              </div>


              {{radio-bar
                class="o-grid-cell
                       o-grid-cell--grow-one
                       o-flex-grid--spaceBetween
                       u-fill-height
                       u-pl2
                       u-pr2
                       g-bg-yellow--300"
                groupValue=(mut currentInDirection)
                groupName="inDirection-toggle"
                options=staggerDirectionOptions
              }}
            </div>

            <div class="o-flex-grid u-fill-width u-height-spacing-4 u-mt2">

              <div class="o-grid-cell u-relative u-width-20 u-fill-height o-grid-cell--auto">
                <h4 class="u-absolute u-align-center u-transform-center">Out Direction</h4>
              </div>

              {{radio-bar
                class="o-grid-cell
                       o-grid-cell--grow-one
                       o-flex-grid--spaceBetween
                       u-fill-height
                       u-pl2
                       u-pr2
                       g-bg-yellow--300"
                groupValue=(mut currentOutDirection)
                groupName="outDirection-toggle"
                options=staggerDirectionOptions
              }}
            </div>

          </div>

        </div>

      </div>

    </section>


  </main>

</div>
